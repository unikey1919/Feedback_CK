<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@android:color/transparent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.join.JoinFragment">
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="John Module"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="267dp"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Ask your trainer for the registation code, then enter it here" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="70dp"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="#fd6331"
        android:gravity="center"
        android:text="CODE"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/inputCode"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_below="@id/textView3"
        android:layout_marginLeft="89dp"
        android:layout_marginTop="-48dp"
        android:background="@drawable/style_border_edit_text"
        android:gravity="center"
        android:inputType="number"
        android:maxLines="1"
        android:textColor="#000000" />
    <TextView
        android:id="@+id/buttonCloseCode"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="50dp"
        android:background="#fd6331"
        android:gravity="center"
        android:text="Close"
        android:textColor="#F8F8F8" />
    <TextView
        android:id="@+id/buttonSubbmitCode"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="-30dp"
        android:background="#4892FF"
        android:gravity="center"
        android:text="Submit"
        android:textColor="#FFFFFF" />


</LinearLayout>