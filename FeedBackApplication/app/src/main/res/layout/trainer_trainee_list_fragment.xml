<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_traineelist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Trainee List"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="47sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvClassID_trainee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvClassID_trainee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginBottom="2dp"
        android:text="Class ID: 1"
        android:textColor="@color/red"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tvClassName_trainee"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_traineelist" />

    <TextView
        android:id="@+id/tvClassName_trainee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:text="Class Name: Class"
        android:textColor="@color/red"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/rcv_trainee_traineelist"
        app:layout_constraintStart_toStartOf="@+id/tvClassID_trainee"
        app:layout_constraintTop_toBottomOf="@+id/tvClassID_trainee" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_trainee_traineelist"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toTopOf="@+id/btnBack_trainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvClassName_trainee" />

    <Button
        android:id="@+id/btnBack_trainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="66dp"
        android:backgroundTint="@color/red"
        android:text="Back"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/rcv_trainee_traineelist"
        app:layout_constraintTop_toBottomOf="@+id/rcv_trainee_traineelist" />

</androidx.constraintlayout.widget.ConstraintLayout>